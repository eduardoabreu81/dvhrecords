rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Artistas: leitura pública, escrita apenas autenticados
    match /artists/{artistId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Tracks: leitura pública, escrita apenas autenticados
    match /tracks/{trackId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Releases: leitura pública, escrita apenas autenticados
    match /releases/{releaseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // About: leitura pública, escrita apenas autenticados
    match /about/{aboutId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Settings (inclui about): leitura pública, escrita apenas autenticados
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Submissions (demos enviados): leitura/escrita apenas autenticados
    match /submissions/{submissionId} {
      allow read, write: if request.auth != null;
    }
  }
}
