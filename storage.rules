rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir leitura pública para todos os arquivos
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Permitir escrita apenas para usuários autenticados
    match /images/{fileName} {
      allow write: if request.auth != null;
    }
    
    match /audio/{fileName} {
      allow write: if request.auth != null;
    }
    
    match /covers/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
